<div class="row">
	<div class="panel panel-body">
		<div class="col-12">
			<div class="row">
				<div class="panel panel-success">
					<div class="panel panel-heading">
						<h3>Pacients List</h3>
					</div>
				</div>

				<hr />

				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Id</th>
							<th>Name</th>
							<th>Cpf</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var pacient in Model)
						{
							<tr>
								<td>@pacient.Id</td>
								<td>@pacient.Name</td>
								<td>@pacient.Cpf</td>
								<td>
									<a class="btn btn-warning" asp-route-id="@pacient.Name" 
															asp-controller="Pacient"
															asp-action="PacientDetail"
															title="Pacient Detail">
															Details					
														</a>
									<a class="btn btn-info" href="javascript:void();" title="Edit Pacient">Edit</a>
									<a class="btn btn-danger" href="javascript:void();" title="Delete Pacient">Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>